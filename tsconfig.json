{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "esnext",
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "jsx": "react",
    "lib": ["dom", "es2017"],
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true
  },
  "include": ["./src"]
}
